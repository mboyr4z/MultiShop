@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Kategori Ekleme sayfası</h4>
				<div class="bs-example" data-example-id="bordered-table">
					<br />
					<form method="post">
						<label>Ürün Adı</label>
						<input type="text" asp-for="ProductName" class="form-control" />
						<br />

						<label>Ürün Fiyatı</label>
						<input type="text" asp-for="Price" class="form-control" />
						<br />

						<label>Ürün Görseli</label>
						<input type="text" asp-for="ProductImageUrl" class="form-control" />
						<br />

						<label>Ürün Kategorisi</label>
						@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryValues, new { @style = "padding:0;", @class = "form-control" })
						<br />

						<label>Ürün Açıklaması</label>
						<textarea type="text" asp-for="ProductDescription" class="form-control" rows="5"></textarea>
						<br />

						<button class="btn btn-primary">Ürünü Ekle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

